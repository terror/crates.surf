{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "client/src/**/*.d.ts",
    "client/src/**/*.ts",
    "client/src/**/*.js",
    "client/src/**/*.svelte"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
